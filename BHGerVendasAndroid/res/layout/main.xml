<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget0"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
<RadioGroup
	android:id="@+id/btGroup"
	android:layout_width="320px"
	android:layout_height="51px"
	android:orientation="horizontal"
	android:layout_x="0px"
	android:layout_y="182px">
<RadioButton
	android:id="@+id/rdTodos"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Todos"
	android:typeface="monospace"
	android:textStyle="bold"
	android:checked="true" />
<RadioButton
	android:id="@+id/rdCliente"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Cliente"
	android:typeface="monospace"
	android:textStyle="bold" />
<RadioButton
	android:id="@+id/rdForn"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Fornecedor"
	android:typeface="monospace"
	android:textStyle="bold"
	android:layout_gravity="right" />
</RadioGroup>
<Button
	android:id="@+id/btMostrar"
	android:layout_width="140px"
	android:layout_height="wrap_content"
	android:text="Atualizar"
	android:layout_x="90px"
	android:layout_y="322px" />
<Spinner
	android:id="@+id/comboMesTP"
	android:layout_width="181px"
	android:layout_height="wrap_content"
	android:layout_x="2px"
	android:layout_y="252px" />
<Spinner
	android:id="@+id/comboAnoTP"
	android:layout_width="129px"
	android:layout_height="wrap_content"
	android:layout_x="190px"
	android:layout_y="252px" />
<TextView
	android:id="@+id/widget36"
	android:layout_width="319px"
	android:layout_height="26px"
	android:text="Selecione o que deseja ver:"
	android:textSize="20sp"
	android:layout_x="0px"
	android:layout_y="152px" />
<ImageButton
	android:id="@+id/widget45"
	android:layout_width="304px"
	android:layout_height="136px"
	android:background="#ff000000"
	android:src="@drawable/fill"
	android:layout_x="10px"
	android:layout_y="12px" />
</AbsoluteLayout>
